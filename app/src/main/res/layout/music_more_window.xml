<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="#90FFFFFF"
                android:gravity="bottom|center_horizontal">

    <TextView
        android:id="@+id/more_window_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dip"
        android:clickable="true"
        android:drawableTop="@mipmap/tabbar_compose_idea"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/more_window_item_margin"
        android:text="文字"/>

    <TextView
        android:id="@+id/more_window_photos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dip"
        android:layout_toRightOf="@+id/more_window_text"
        android:clickable="true"
        android:drawableTop="@mipmap/tabbar_compose_photo"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/more_window_item_margin"
        android:text="相册"/>

    <TextView
        android:id="@+id/more_window_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/more_window_photos"
        android:clickable="true"
        android:drawableTop="@mipmap/tabbar_compose_camera"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/more_window_item_margin"
        android:text="拍摄"/>

    <TextView
        android:id="@+id/more_window_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/more_window_text"
        android:layout_marginRight="30dip"
        android:clickable="true"
        android:drawableTop="@mipmap/tabbar_compose_lbs"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/more_window_item_margin"
        android:text="签到"/>

    <TextView
        android:id="@+id/more_window_auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/more_window_photos"
        android:layout_marginRight="30dip"
        android:layout_toRightOf="@+id/more_window_sign"
        android:clickable="true"
        android:drawableTop="@mipmap/tabbar_compose_review"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/more_window_item_margin"
        android:text="点评"/>


    <ImageView
        android:id="@+id/center_music_window_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/more_window_auto"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="78dip"
        android:layout_toRightOf="@+id/more_window_sign"
        android:src="@mipmap/tabbar_compose_background_icon_close"/>

</RelativeLayout>